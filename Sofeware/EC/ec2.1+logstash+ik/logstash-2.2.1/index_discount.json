        "city":{"type": "string"},
        "avg_price":{"type": "integer"},
        "store_area":{"type": "string", "store": "yes","term_vector": "with_positions_offsets", "analyzer": "ik_max_word","search_analyzer": "ik_max_word","include_in_all":"true","boost": 8},
        "tel":{"type": "string"},
        "store_logo":{"type": "string"},
        "store_lat":{"type": "string"},
        "store_lng":{"type": "string"},
        "discount_rate":{"type": "string"},
        "discount_id":{"type": "integer"},
        "preferential_id":{"type": "integer"},
        "is_takepartin":{"type": "integer"},
        "start_time":{"type": "integer"},
        "end_time":{"type": "integer"},
        "city":{"type": "integer"},
